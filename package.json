{
  "name": "nft-demo",
  "private": true,
  "version": "0.0.0",
  "license": "MIT",
  "author": "项尘",
  "scripts": {
    "dev": "vite",
    "fun": "ts-node ./build/utils.ts",
    "build": "vite build",
    "preview": "vite preview",
    "clean": "npx rimraf node_modules",
    "node": "npx hardhat node --config hardhat.cjs",
    "deploy:bsc": "npx hardhat run --network bscTestnet ./scripts/deploy.cjs",
    "deploy": "npx hardhat run --network localhost ./scripts/deploy.cjs",
    "lint": "run-p lint:eslint lint:prettier",
    "format": "run-p lint:prettier",
    "compile": "npx hardhat compile",
    "clean:cache": "rimraf node_modules/.cache/ && rimraf node_modules/.vite",
    "test": "npx hardhat test",
    "lint:stylelint": "stylelint --cache --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:eslint": "eslint --fix --ext .js,.ts,.vue ./src",
    "lint:spellcheck": "cspell lint \"{src,types,build/vite/plugins}/**/*.{ts,js,mjs,cjs,json,tsx,css,less,scss,vue,html,md}\"",
    "precommit": "lint-staged",
    "lint:prettier": "prettier --write \"src/**/*.{js,ts,json,tsx,css,less,scss,vue,html,md}\"",
    "commit": "git add . && git-cz",
    "deps": "yarn upgrade-interactive --latest",
    "prepare": "husky"
  },
