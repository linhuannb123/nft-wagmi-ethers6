{
  "compilerOptions": {
    "composite": true,
    "target": "ESNext",
    "module": "esnext",
    "rootDir": ".",
    "outDir": "dist",

    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "baseUrl": ".",
    "types": ["vite/client", "node"],
    "typeRoots": ["./node_modules/@types", "types"],
    "allowJs": true,
    "lib": ["ESNext", "DOM", "dom.iterable", "scripthost"],
    "paths": {
      "@/*": ["src/*"],
      "/#/*": ["types/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "types/**/*.d.ts",
    "types/**/*.ts",
    "build/**/*.ts",
    "build/*.ts",
    "build/**/*.d.ts",
    "mock/**/*.ts",
    "vite.config.mts",
    "scripts/*.cjs",
    "build/utils.ts",
    "src/Marketplace.json"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.js",
    "build/plugins/mock.ts",
    "build/plugins/svgIcon.ts",
    "build/plugins/unocss.ts",
  ]
}
